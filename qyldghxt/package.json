{
  "name": "enterprise-annual-planning-system",
  "private": true,
  "version": "1.0.7",
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:server": "node server/index.js",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on tcp:3003 && electron .\"",
    "electron:build": "vite build && electron-builder && node scripts/dist-arrange.js",
    "build:client": "vite build && electron-builder --win --x64",
    "build:server": "node scripts/build-server-pkg.js",
    "build:server-release": "electron-builder --config electron-builder-server.json",
    "release:azb": "npm run build:client && npm run build:server && npm run build:server-release && node scripts/create-install-all.js"
  },
  "dependencies": {
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "lucide-react": "^0.263.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.3",
    "postcss": "^8.4.35",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.8.1",
    "recharts": "^2.10.1",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "tailwindcss": "^3.4.1",
    "xlsx": "^0.18.5",
    "xlsx-js-style": "^1.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.17",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.3.7",
    "javascript-obfuscator": "^4.2.1",
    "pkg": "^5.8.1",
    "rollup-plugin-obfuscator": "^1.1.0",
    "terser": "^5.44.1",
    "vite": "^7.2.2"
  },
  "build": {
    "appId": "com.qygl.client",
    "productName": "企业年度规划系统-客户端",
    "directories": {
      "output": "azb/1.0.4/release/client"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!server.js",
      "!backend/**/*",
      "!**/*.sql"
    ],
    "extraResources": [
      {
        "from": "public/config.js",
        "to": "config.js"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico",
      "artifactName": "Client-Setup-${version}.exe"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://192.168.1.26:5004/updates/"
      }
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "electronVersion": "32.2.0"
  }
}
